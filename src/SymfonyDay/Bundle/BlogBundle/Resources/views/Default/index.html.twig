{% extends "::base.html.twig" %}

{% block title -%}

	Blog

{%- endblock %}

{% block body %}

	<h1>Latest blog entries</h1>

	{% for post in posts %}

		<article class="post">
			<h1>
                <a href="{{ path('post', { 'id': post.id } ) }}">
                    {{ post.title|title }}
                </a>
            </h1>
            {% 
                include "SymfonyDayBlogBundle:Default:details.html.twig" with {
                    'post': post
                } only
            %}
		</article>
        <!-- / .post -->

	{% endfor %}

{% endblock %}